{
  "manifest_version": 3,
  "name": "YouTube Auto Pause",
  "version": "1.0",
  "description": "Automatically pauses YouTube videos when you switch tabs.",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "YouTube Auto Pause"
  }
}
